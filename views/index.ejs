<%- include('./partials/head') %>

 
<section class="squad">
    <ul>
       <% persons.forEach(person => { %>
          <li>
             <div href="./person/<%= person.id %>"></div> %> 
                 <a href="./person/<%= person.id %>">
                 <img src="<%= person.avatar %>"`
                 onerror="this.onerror=null; this.src='../assets/placeholder.jpg'"></a>
          </li><% }) %>   
    </ul> 
</section>

<section class="comment-section">
    <h2>Bee kind & leave a comment 🐝</h2>
      <form method="POST" action="/">
        <textarea id="comment" name="bericht" required placeholder="plaats een opmerking"></textarea>
        <button type="submit">Submit message</button>
      </form> 

  <ul class="messageboard">
    <h2>Messages</h2>
        <% messages.forEach(message => { %>
        <li><%= message %></li>
         <% console.log('Displayed message:', message); %>
        <% }) %>
  </ul>
</section>





